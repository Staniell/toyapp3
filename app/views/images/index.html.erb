<div class="m-4">
    <h1 class="text-2xl font-bold text-center">Random Collection of Images</h1>
    <div data-controller="carousel" class="mb-4 swiper-container overflow-hidden relative" data-carousel-options-value='{"direction": "horizontal", "autoplay": { "delay": 5000 }, "pagination": { "el": ".swiper-pagination", 
                    "dynamicBullets": "true", "clickable": "true" }}'>
      <div class="swiper-wrapper">
        <% @images.each do |image| %>
          <div class="swiper-slide"><%= cl_image_tag image.key, class:"border-2 w-64 h-64 lg:w-96 lg:h-96 m-auto" %></div>
        <% end %>
      </div>
      <div class="swiper-pagination absolute bottom-0"></div>
    </div>
    
    <div data-controller="carousel" class="mt-4 swiper-container overflow-hidden relative" data-carousel-options-value='{"direction": "horizontal", "autoplay": { "delay": 5000 }, "pagination": { "el": ".swiper-pagination", 
                    "dynamicBullets": "true", "clickable": "true" }}'>
