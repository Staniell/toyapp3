<div>
    <% if current_user %>
        <div class="lg:w-fit font-bold mx-5 mt-5 p-4 bg-slate-100 border-200 border-2">
            <%= link_to "New Toy", new_post_path %>
        </div>
    <% end %>
    <% if @posts.count > 0 %>
        <div class="bg-slate-100 p-4 m-5 grid grid-cols-4 gap-4 justify-center">
            <% @posts.each do |post| %>
                <%= render post %>
            <% end %>
        </div>
    <% else %>
        <div class="bg-slate-100 mx-5 p-4 mt-5">
            <h1>Currently, there are no posts for toys.</h1>
        </div>
    <% end %>
</div>
