<%= form_for @post do |f| %>
    <div class="flex flex-col bg-slate-50 border-2 pb-6 pt-3 lg:w-1/2 text-center m-auto mt-10">
        <%= f.label :title, class: "mt-3 font-bold" %>
        <%= f.text_field :title, class: "mt-3 p-2 w-11/12 bg-slate-100 border-2 shadow-md lg:w-1/2 m-auto" %> 
        <%= f.label :body, class: "mt-3 font-bold" %>
        <span class="mt-3 font-bold">Tags:</span>
        <div class="flex items-center justify-center">
            <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |t| %>
                <%= t.label do %>
                    <div class="p-3"><%= t.check_box + t.text %></div>
                 <% end %>
            <% end %>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.text_area :body, class: "mt-3 p-2 w-11/12 bg-slate-100 border-2 shadow-md lg:w-1/2 m-auto" %>
        <%= f.submit "Save", class:"mt-6 hover:shadow-md hover:cursor-pointer lg:w-1/4 m-auto p-2 rounder-md bg-slate-300" %>
    </div>
<% end %>