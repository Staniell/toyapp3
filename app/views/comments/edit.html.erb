<%= form_for @comment do |f| %>
  <div class="flex flex-col bg-slate-50 border-2 pb-6 pt-3 lg:w-1/2 text-center m-auto mt-10">
    <h1 class="text-2xl font-bold hover:text-blue-500 hover:cursor-pointer">
      <%= link_to @comment.post.title, post_path(@comment.post) %>
    </h1>
    <%= f.label :From, class: "mt-3 font-bold" %>
    <%= f.text_field :body, readonly: true, class: "mt-3 p-2 w-11/12 bg-slate-100 border-2 shadow-md lg:w-1/2 m-auto" %>
    <%= f.label :To, class: "mt-3 font-bold" %>
    <%= f.text_field :body, class: "mt-3 p-2 w-11/12 bg-slate-100 border-2 shadow-md lg:w-1/2 m-auto" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :id, value: @comment.id %>
    <%= f.submit "Save", class:"mt-6 hover:shadow-md hover:cursor-pointer lg:w-1/4 m-auto p-2 rounder-md bg-slate-300" %>
  </div>
<% end %>
