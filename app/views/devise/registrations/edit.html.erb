<div class="max-w-md mt-5 mx-auto bg-white rounded-lg shadow-lg p-6">
<h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :name, class: "block font-medium text-gray-700" %>
    <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-400 rounded", autofocus: true %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block font-medium text-gray-700" %>
    <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-400 rounded", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-4">
    <%= f.label :password, class: "block font-medium text-gray-700" %> <i class="text-sm">(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-400 rounded", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em class="text-sm"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-400 rounded", autocomplete: "new-password" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, class: "block font-medium text-gray-700" %> <i class="text-sm">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class: "w-full px-3 py-2 border border-gray-400 rounded", autocomplete: "current-password" %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit "Update", class: "px-4 py-2 bg-indigo-500 text-white hover:bg-indigo-700 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>

<div class="mt-8">
  <h3 class="text-lg font-bold mb-2">Delete my account</h3>
  <div class="mb-4 text-gray-700"><%= button_to "Delete", user_path(id: current_user.id), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 text-white hover:bg-red-700 py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %></div>
</div>

<%= link_to "Back", :back, class: "text-gray-600 underline" %>
</div>