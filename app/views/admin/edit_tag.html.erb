<div class="">
    <div class="border-2 bg-slate-50 p-4 text-center">
        <h1 class="text-2xl font-bold">From</h1>
        <h1 class="text-2xl font-bold">"<%= @old_tag.name %>"</h1>
        
    </div>
    <div class="border-2 bg-slate-50 p-4 text-center">
        <h1 class="text-2xl font-bold mb-3">To</h1>
        <%= form_with(model:@tag, local: true) do |f| %>
            <%= f.text_field :name, class:"text-center block border-2 rounded-md m-3 bg-white p-2 block m-auto" %>
            <%= f.submit "Save", class:"mt-6 hover:shadow-md hover:cursor-pointer hover:text-blue-500 shadow-sm border-2 lg:w-1/4 m-auto p-2 font-bold rounded-md bg-white" %>
        <% end %>
    </div>
</div>