<div>
    <div class="border-2 bg-slate-50 rounded-md w-fit m-auto my-4 p-2">
        <h1 class="text-2xl font-bold text-center">Current Tags</h1>
        <div class="flex gap-4 items-center justify-center">
            <% @tags.each do |tag| %>
                <div class="flex flex-col items-center justify-center">
                    <h1 class="text-xl font-bold p-6"><%= tag.name %></h1>
                    <div class="flex justify-between p-3 gap-4">
                        <span class="hover:text-blue-500"><%= link_to "Edit", "edit_tag/#{tag.id}" %></span>
                        <span class="hover:text-red-500"><%= link_to "Delete", "destroy_tag/#{tag.id}", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></span>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="border-2 bg-slate-50 rounded-md lg:w-11/12 m-auto p-4">
        <h1 class="text-2xl font-bold text-center">Add New Tag</h1>
        <%= form_with(model: @tag, local: true) do |f| %>
            <div class="flex flex-col justify-center items-center">
                <h1 class="mt-3 text-2xl font-bold">Tag Name</h1>
                <%= f.text_field :name, class: "mt-3 p-2 bg-white rounded-md border-2 shadow-md m-auto" %> 
                <%= f.submit "Save", class:"mt-6 hover:shadow-md hover:cursor-pointer hover:text-blue-500 shadow-sm border-2 m-auto p-2 font-bold rounded-md bg-white" %>
            </div>
        <% end %>
    </div>

</div>