<h1 class="text-2xl font-bold text-center m-5">All Users</h1>
<div class="flex flex-wrap items-center justify-center">
    <% @users.each do |user| %>
        <% if user.name %>
            <div class="border-2 font-bold bg-slate-50 flex flex-col p-5">
                <p>User ID: <%=user.id%></p>
                <p>Email: <%=user.email%></p>
                <p>Username: <%=link_to user.name, "post_by_user/#{user.id}" %></p>
                <p>Posts: <%= user.posts.count %></p>
                <p>Comments: <%= user.comments.count %></p>
                <p class="text-gray-700 mt-2 text-xs">Created:<%= standard_datetime(user.created_at) %></p>
                <p class="text-gray-700 mt-2 text-xs">Updated:<%= standard_datetime(user.updated_at) %></p>
                <%= link_to "Delete","user_check/#{user.id}" ,data:{turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"mx-5 bg-red-100 p-2 m-2 w-fit hover:text-red-500" %>
            </div>
        <% end %>
    <% end %>
</div>